mixin modal(title, text, modalName)
    .modal.fade(id= modalName, tabindex="-1", role="dialog", aria-hidden="true")
        .modal-dialog(role="document")
            .modal-content
                .modal-header
                    h1.modal-title= title
                .modal-body
                    p= text
                .modal-footer
                    button.btn.btn-secondary(type="button", data-dismiss="modal") Close
