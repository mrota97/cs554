mixin modal(title, text, modalName)
    .modal.fade(id= modalName, tabindex="-1", role="dialog", aria-hidden="true")
        .modal-dialog(role="document")
            .modal-content
                .modal-header
                    h1.modal-title= title
                .modal-body
                    p= text
                .modal-footer
                    button.btn.btn-secondary(type="button", data-dismiss="modal") Close

mixin card(id, name, imgSrc, text, dataTarget)
    .card(id= id)
        h1.card-header.background-russian-green= name
        img.card-img-top(src= imgSrc, alt= name)
        .card-body
            p.card-text= text
            button.bt.btn-primary(type="button", data-toggle="modal", data-target= dataTarget) Learn more
 
